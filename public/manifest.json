{
  "manifest_version": 3,
  "name": "baitblock",
  "version": "1.0",
  "description": "Block bait links and unwanted content.",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}